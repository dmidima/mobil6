<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:text="@string/t2"
    android:background="@color/button_color1"


    android:padding="16dp">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="332dp"
        android:layout_height="349dp"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="@string/t2"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/disclaimerTextView"
        android:layout_width="332dp"
        android:layout_height="127dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="16dp"
        android:text="Результаты теста — это приблизительная оценка.  Для более глубокого понимания себя, изучите описания типов личности."
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.733"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="339dp"
        android:layout_height="63dp"
        android:layout_marginTop="220dp"
        android:text="Вернуться на Главную"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>