<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="Theme.YourAppName" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/myPurple</item>
        <!-- ... other theme attributes ... -->
    </style>

    <color name="myPurple">#6200EE</color> <!-- Пример фиолетового цвета, замените на ваш -->


    <style name="YellowTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/yellow</item> <!-- Цвет текста -->
    </style>

    <style name="MyBottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@color/my_nav_color</item> <!-- Цвет фона -->
        <item name="itemTextColor">@color/my_nav_text_color</item> <!-- Цвет текста -->
        <item name="itemIconTint">@color/my_nav_icon_color</item>   <!-- Цвет иконок -->
    </style>

    <color name="my_nav_color">#8338ec</color> <!-- Оранжевый, например -->
    <color name="my_nav_text_color">#FFFFFF</color> <!-- Белый -->
    <color name="my_nav_icon_color">#FFFFFF</color> <!-- Белый -->



    <color name="yellow">#FFEB3B</color> <!-- Например, яркий желтый -->

    <style name="YellowButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/black</item> <!-- Темный текст для контраста -->
        <item name="android:background">@color/yellow</item>
        <item name="android:padding">12dp</item>            <!-- Удалил лишний padding -->
        <item name="cornerFamily">rounded</item>             <!-- Добавлено для скругления -->
        <item name="cornerRadius">8dp</item>                  <!-- Радиус скругления -->
    </style>


    <color name="background_color">#f0f0f0</color>  <!-- Light gray background -->
    <color name="button_color">#4CAF50</color>  <!-- Green button color -->
    <color name="accent_color">#009688</color>   <!-- Teal accent color -->


    <color name="background_color1">#F8F8FF</color>  <!-- Light gray background -->
    <color name="button_color1">#8b95c9</color>  <!-- Green button color -->
    <color name="accent_color1">#FFF8DC</color>   <!-- Teal accent color -->




    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="colorAccent">#FF4081</color>
    <color name="gray">#808080</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
</resources>

